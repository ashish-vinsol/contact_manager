<% if @contacts.present? %>
  <table class="table contact-display">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Contact Number</th>
      </tr>
    </thead>
    <tbody>
       <%= render @contacts %>
    </tbody>
  </table>
<% end %>
<br>

<input type="text" size="25" class="number-display">

<div class="keypad">
  <div class="key-row">
    <div class="key-cell">
      <button class="btn btn-default key" type="button">1<br/></button>
    </div>
    <div class="key-cell">
      <button class="btn btn-default key" type="button">2<br/><span class="key-alt-f">A B C</span></button>
    </div>
    <div class="key-cell">
      <button class="btn btn-default key" type="button">3<br/><span class="key-alt-fn">D E F</span></button>
    </div>
  </div>
  <div class="key-row">
    <div class="key-cell">
      <button class="btn btn-default key" type="button">4<br/><span class="key-alt-fn">G H I</span></button>
    </div>
    <div class="key-cell">
      <button class="btn btn-default key" type="button">5<br/><span class="key-alt-fn">J K L</span></button>
    </div>
    <div class="key-cell">
      <button class="btn btn-default key" type="button">6<br/><span class="key-alt-fn">M N O</span></button>
    </div>
  </div>
  <div class="key-row">
    <div class="key-cell">
      <button class="btn btn-default key" type="button">7<br/><span class="key-alt-fn">P Q R S</span></button>
    </div>
    <div class="key-cell">
      <button class="btn btn-default key" type="button">8<br/><span class="key-alt-fn">T U V</span></button>
    </div>
    <div class="key-cell">
      <button class="btn btn-default key" type="button">9<br/><span class="key-alt-fn">W X Y Z</span></button>
    </div>
  </div>
  <div class="key-row">
    <div class="key-cell">
      <button class="btn btn-default key wide-key" type="button">0<br/></button>
    </div>
    <div class="key-cell"></div>
    <div class="key-cell">
      <button class="btn btn-default clear-key" type="button">Clear</button>
    </div>
  </div>
</div>


<%= content_for :javascript do %>
  <%= javascript_tag do %>
    $(window).load(function() {
      var contactForm = new ContactForm();
      contactForm.initialize();
    });
  <% end %>
<% end %>
